{
  "model": {
    "type": "minecraft:select",
    "property": "minecraft:component",
    "component": "minecraft:custom_name",
    "cases": [
      {
        "when": "Bec de Corbin",
        "model":{
          "type": "minecraft:select",
          "cases": [
            {
              "model": {
                "type": "minecraft:model",
                "model": "rgt:item/spears/item/corbin_spear"
              },
              "when": [
                "gui",
                "ground",
                "fixed",
                "on_shelf"
              ]
            }
          ],
          "fallback": {
            "type": "minecraft:model",
            "model": "rgt:item/spears/in_hand/corbin_spear_in_hand"
          },
          "property": "minecraft:display_context"
        }
      },
